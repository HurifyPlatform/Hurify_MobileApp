<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_device"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/toolbarContainer"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout10">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relative1"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Project Name"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <EditText
                    android:id="@+id/Project_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Project Name"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relative2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative1"
                android:layout_centerHorizontal="true">



                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Technology"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <EditText
                    android:id="@+id/Technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:ems="10"
                    android:textSize="12sp"
                    android:inputType="textPersonName"
                    android:hint="Technology"
                    android:layout_toEndOf="@+id/textView1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relative3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative2"
                android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Categories"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <TextView
                    android:id="@+id/Categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:hint="Choose Categories"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relative4"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative3"
                android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Price"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <EditText
                    android:id="@+id/Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Price"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView4" />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relative5"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative4"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Experience"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <Spinner
                    android:id="@+id/Experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:entries="@array/expValue"
                    android:layout_toEndOf="@+id/textView5" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relative6"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative5"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Estimate Time"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <EditText
                    android:id="@+id/Estimate_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=" Estimate Time"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView6" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/relative7"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative6"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Abstract"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <EditText
                    android:id="@+id/Abstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="120"
                    android:inputType="textPersonName"
                    android:hint="Abstract"
                    android:gravity="bottom"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView7" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/relative8"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relative7"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:text="Description"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    />

                <EditText
                    android:id="@+id/Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Description"
                    android:gravity="bottom"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/textView8" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/PostProject"
                android:layout_marginTop="15dp"
                android:text="Post Project"
                android:textColor="@color/white"
                android:background="@drawable/button_pressed"
                android:layout_below="@+id/relative8"
                android:layout_centerHorizontal="true">
            </Button>



            <TextView
                android:id="@+id/validName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relative1"
                android:layout_marginStart="15dp"
                android:text="" />

            <TextView
                android:id="@+id/validTechnology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validName"
                android:layout_below="@+id/relative2"
                android:text="" />

            <TextView
                android:id="@+id/validCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validTechnology"
                android:layout_below="@+id/relative3"

                android:text="" />

            <TextView
                android:id="@+id/validPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validCategories"
                android:layout_below="@+id/relative4"

                android:text="" />

            <TextView
                android:id="@+id/validExprience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validPrice"
                android:layout_below="@+id/relative5"

                android:text="" />

            <TextView
                android:id="@+id/validEstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validExprience"
                android:layout_below="@+id/relative6"

                android:text="" />
            <TextView
                android:id="@+id/validAbstract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validEstTime"
                android:layout_below="@+id/relative7"
                android:text="" />
            <TextView
                android:id="@+id/validDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/validAbstract"
                android:layout_below="@+id/relative8"
                android:text="" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
