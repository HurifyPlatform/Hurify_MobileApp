<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_device"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <include android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/toolbarContainer"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout10">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout10"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative1"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Name"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                 />

            <EditText
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Name"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative1"
            android:layout_centerHorizontal="true">



            <TextView
                android:id="@+id/textView1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Country"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <Spinner
                android:id="@+id/Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:entries="@array/spinnerItems"
                android:layout_toEndOf="@+id/textView1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative2"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Language"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="14sp"
                android:inputType="textPersonName"
                android:hint="Language"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative3"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Job Title"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/JobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Job Title"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView4" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative5"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative4"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Hourly Rate"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/HourRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Hourly Rate"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView5" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative6"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative5"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Categories"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <TextView
                android:id="@+id/Categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint=" Choose Categories"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView6" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relative7"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative6"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Skills"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <EditText
                android:id="@+id/Skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Skills"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView7" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/relative8"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/relative7"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Overview"
                android:textSize="16sp"
                android:gravity="top"
                android:layout_marginStart="15dp"
                />
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_toEndOf="@+id/textView8">

                <EditText
                    android:id="@+id/Overview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView8"
                    android:ems="10"
                    android:gravity="bottom"
                    android:hint="Overview Max 100 Words"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/relative9"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative8"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Upload Photo"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <ImageView
                android:id="@+id/Choose_photo"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:hint="Skills"
                android:src="@drawable/add_photo"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView9" />
            <ImageView
                android:id="@+id/Upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:hint="Skills"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/Choose_photo" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/relative10"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relative9"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Upload Document"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                />

            <ImageView
                android:id="@+id/Choose_document"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:hint="Skills"
                android:src="@drawable/doc"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView10" />

            <ImageView
                android:id="@+id/Upload_document"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:hint="Skills"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/Choose_document" />


        </RelativeLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ProfileSubmit"
            android:layout_marginTop="15dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/button_pressed"
            android:layout_below="@+id/relative10"
            android:layout_centerHorizontal="true">
        </Button>



        <TextView
            android:id="@+id/validName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relative1"
            android:layout_marginStart="15dp"
            android:text="" />

        <TextView
            android:id="@+id/validCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validName"
            android:layout_below="@+id/relative2"

            android:text="" />

        <TextView
            android:id="@+id/validLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validCountry"
            android:layout_below="@+id/relative3"

            android:text="" />

        <TextView
            android:id="@+id/validJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validLanguage"
            android:layout_below="@+id/relative4"

            android:text="" />

        <TextView
            android:id="@+id/validHourRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validJobTitle"
            android:layout_below="@+id/relative5"

            android:text="" />

        <TextView
            android:id="@+id/validCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validHourRate"
            android:layout_below="@+id/relative6"

            android:text="" />
        <TextView
            android:id="@+id/validSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validCategories"
            android:layout_below="@+id/relative7"
            android:text="" />
        <TextView
            android:id="@+id/validOverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/validSkill"
            android:layout_below="@+id/relative8"
            android:text="" />


    </RelativeLayout>


</ScrollView>




</RelativeLayout>
